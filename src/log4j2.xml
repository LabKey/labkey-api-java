<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>

    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <!-- p=priority c=category d=datetime t=thread m=message n=newline -->
            <PatternLayout pattern="%-5p %c{1} - %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="error">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>

</Configuration>